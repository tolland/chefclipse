  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.limepepper.chefclipse</groupId>
  <artifactId>org.limepepper.chefclipse</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <properties>
    <tycho-version>0.17.0</tycho-version>
    <tycho-extras-version>0.17.0</tycho-extras-version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <organization>
    <name>Lime Pepper Ltd</name>
    <url>http://www.limepepper.co.uk</url>
  </organization>
  <name>Chefclipse</name>
  <url>https://github.com/limepepper/chefclipse</url>


