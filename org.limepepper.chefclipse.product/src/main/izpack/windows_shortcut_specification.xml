<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<shortcuts>
    <skipIfNotSupported />
    <programGroup defaultName="Chefclipse" location="applications"/>
    
    <shortcut
        name="Chefclipse"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\chefclipse.exe"
        workingDirectory="$INSTALL_PATH\bin"
        commandLine=""
        initialState="normal"
        iconFile="$INSTALL_PATH\bin\resources\images\icons\icon.ico"
        type="Application"
        encoding="UTF-8"
        description="Run Chefclipse Application">
    
        <createForPack name="Chefclipse Application"/>
    </shortcut>
    
    <shortcut
        name="Chefclipse Uninstaller"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\Uninstall\uninstaller.jar"
        workingDirectory="$INSTALL_PATH\bin"
        commandLine=""
        initialState="normal"
        iconFile="$INSTALL_PATH\bin\resources\images\icons\icon.ico"
        type="Application"
        encoding="UTF-8"
        description="Unistall the chefclipse application">
    
        <createForPack name="Chefclipse Application"/>
    </shortcut>

</shortcuts>

