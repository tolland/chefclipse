<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="workstationBuilder"
         name="Workstation Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.limepepper.chefclipse.workstation.builder.WorkstationBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="workstationNature"
         name="Workstation Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.limepepper.chefclipse.workstation.builder.WorkstationNature">
         </run>
      </runtime>
      <builder
            id="org.limepepper.chefclipse.workstation.workstationBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="org.limepepper.chefclipse.workstation.contribution1">
         <action
               label="Add/Remove Chef Workstation Nature"
               class="org.limepepper.chefclipse.workstation.builder.ToggleNatureAction"
               menubarPath="additions"
               enablesFor="+"
               id="org.limepepper.chefclipse.workstation.addRemoveNatureAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

</plugin>
