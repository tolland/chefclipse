<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.limepepper.chefclipse.chefserver.ui.objectContribution134324324"
            nameFilter="*"
            objectClass="org.eclipse.core.resources.IFolder">
         <enablement></enablement>
         <action
               class="org.limepepper.chefclipse.chefserver.ui.CookbookActionItem"
               id="org.limepepper.chefclipse.CookbookActionItem"
               label="Run cookbook action">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.limepepper.chefclipse.chefserver.ui.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="org.limepepper.chefclipse.chefserver.ui.commands.category"
            id="org.limepepper.chefclipse.chefserver.ui.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.limepepper.chefclipse.chefserver.ui.handlers.ServerApiCommandHandler"
            commandId="org.limepepper.chefclipse.chefserver.ui.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.limepepper.chefclipse.chefserver.ui.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.limepepper.chefclipse.chefserver.ui.menus.sampleMenu"
               label="Run SErver task"
               mnemonic="M">
            <command
                  commandId="org.limepepper.chefclipse.chefserver.ui.commands.sampleCommand"
                  id="org.limepepper.chefclipse.chefserver.ui.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.limepepper.chefclipse.chefserver.ui.toolbars.sampleToolbar">
            <command
                  commandId="org.limepepper.chefclipse.chefserver.ui.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="org.limepepper.chefclipse.chefserver.ui.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
</plugin>
