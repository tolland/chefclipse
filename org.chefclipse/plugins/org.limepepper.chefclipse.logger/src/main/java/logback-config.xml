<configuration debug="true">

	<appender name="ECLIPSE"
		class="ch.qos.logback.contrib.eclipse.EclipseLogAppender">
		<encoder>
			<pattern>%d [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
		<bundleName>org.limepepper.chefclipse.logger</bundleName>
	</appender>
	<root level="INFO">
		<appender-ref ref="ECLIPSE" />
	</root>
</configuration>
