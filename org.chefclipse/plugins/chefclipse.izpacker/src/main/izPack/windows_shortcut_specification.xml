<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<shortcuts>
    <skipIfNotSupported />
    <defaultCurrentUser/>
    <programGroup defaultName="Chefclipse" location="applications"/>

    <shortcut
        name="Chefclipse(${SCM_BRANCH})"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="${CC_PATH}${SEP}${exe_name}"
        workingDirectory="${CC_PATH}"
        commandLine="-data @user.home/workspace-chefclipse-${SCM_BRANCH}"
        initialState="normal"
        iconFile="${CC_PATH}${SEP}resources${SEP}images${SEP}icons${SEP}16x16.ico"
        type="Application"
        encoding="UTF-8"
        description="Run Chefclipse Application">

        <createForPack name="Chefclipse"/>
    </shortcut>
    <shortcut
        name="Uninstall"
        programGroup="yes"
        desktop="no"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\Uninstall\uninstaller.jar"
        workingDirectory="$INSTALL_PATH\bin"
        commandLine=""
        initialState="normal"
        iconFile="$INSTALL_PATH\bin\resources\images\icons\icon.ico"
        type="Application"
        encoding="UTF-8"
        description="Unistall the chefclipse application">

        <createForPack name="Chefclipse Application"/>
    </shortcut>
</shortcuts>
